<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvMotorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motorista"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgCar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="R$"
        app:layout_constraintStart_toEndOf="@+id/imgCar"
        app:layout_constraintTop_toBottomOf="@+id/tvMotorista"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nota"
        app:layout_constraintStart_toEndOf="@+id/imgCar"
        app:layout_constraintTop_toBottomOf="@+id/tvValor"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgCar"
        android:layout_width="60dp"
        android:layout_height="65dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSelecionarMotorista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

